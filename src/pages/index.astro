---
import { Icon } from 'astro-icon'
import Layout from '@/layouts/Layout.astro'
import Card from '@/components/Card.astro'

const infos = [
    { icon: 'location-dot-solid', text: 'J\'habite à <span class="underline decoration-primary">Montréal</span>' },
    { icon: 'briefcase-solid', text: 'Je suis <span class="underline decoration-primary">Développeur JavaScript</span>' },
    { icon: 'graduation-cap-solid', text: 'J\'ai un diplôme d\'ingénieur du <span class="underline decoration-primary">CNAM</span> de Paris' }
]
---

<Layout>
    <h1>Antoine Kahlouche</h1>

    <div class='dynamic-pt flex flex-col md:flex-row gap'>
        <Card class='w-full h-fit md:basis-1/3 aspect-square md:aspect-[3/4] fade-in' img='/images/antoine.png' />
        <Card class='h-fit md:basis-2/3'>
            <h2 class='pt-0'>Présentation</h2>
            {
                infos.map((i) => (
                    <p class='py-1'>
                        <Icon name={i.icon} class='svg-as-char w-10 text-center' />
                        <span set:html={i.text} />
                    </p>
                ))
            }
            <div class='dynamic-pt'></div>
            En cours d'écriture ...
            <div class='text-right dynamic-pt'>
                <a href='/about'>En savoir plus -&gt;</a>
            </div>
        </Card>
    </div>
</Layout>
